<home>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        ScrollView:
            do_scroll_x: False
			do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                Button:
                    text: 'Activity 1'
                    size_hint_y: None
                    height: '48dp'

	FloatLayout:
		MDIconButton:
			icon: "account-multiple"
			user_font_size: '48sp'
			pos_hint: {'right': 0.2, 'y': 0}

		MDIconButton:
			icon: "account-box"
			user_font_size: '48sp'
			pos_hint: {'right': 1, 'y': 0}
			on_release: app.root.current = "settings"
